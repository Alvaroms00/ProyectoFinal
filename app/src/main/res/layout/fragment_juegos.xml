<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menus.JuegosFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="115dp"
        android:src="@drawable/hangman"
        app:layout_constraintBottom_toTopOf="@+id/btnAhorcado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAhorcado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar Ahorcado"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="123dp"
        android:layout_height="115dp"
        android:src="@drawable/tictactoe"
        app:layout_constraintBottom_toTopOf="@+id/btnTicTacToe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAhorcado" />

    <Button
        android:id="@+id/btnTicTacToe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar 3 en Raya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />
</androidx.constraintlayout.widget.ConstraintLayout>